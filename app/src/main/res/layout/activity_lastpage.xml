<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewA">
    <!--처음 drwaer /JIKJY-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#87cefa"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/top_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/circle"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/top_textView2"
                android:layout_width="wrap_content"
                android:fontFamily="@font/circle"
                android:textColor="#FFFFFF"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <TextView
            android:id="@+id/lastpage_name"
            android:layout_width="match_parent"
            android:fontFamily="@font/mak"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.06">
            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image1"/> -->

        </LinearLayout>

        <!--사진 FrameLayout 안에 ImageButton 추가-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="235dp">

            <!--사진 슬라이드(Flipper)-->
            <ViewFlipper
                android:id="@+id/Flipper"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--ImageView -> 하나씩 -->
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />
            </ViewFlipper>

            <!--사진 속 ImageButton-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="268dp">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onclick"
                    android:background="@android:color/transparent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:onClick="onclick"/>



            </RelativeLayout>

        </FrameLayout>
        <!--원하는 곳의 정보-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="780dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">



                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView

                            android:id="@+id/lastpage_imageView_like"
                            android:layout_width="268dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/ilike1" />

                        <TextView
                            android:id="@+id/like_textView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold" />
                    </RelativeLayout>



                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_review"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/reivew_image" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_kakaolink"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/kakao" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/putin_image3" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="50dp"
                        android:id="@+id/MMS"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:background="@drawable/mms_image1" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#87cefa"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mak"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="12dp"
                    android:text="이용 정보"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/where_image" />

                <TextView
                    android:id="@+id/lastpage_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#708090"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phone_image" />

                <TextView
                    android:id="@+id/lastpage_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="35dp"
                    android:textColor="#708090"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/callbtn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:background="@android:color/transparent" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/time_image" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/lastpage_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:textColor="#708090"
                    android:maxLines="2"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/link_image"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/lastpage_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="링크 바로가기"
                    android:paddingLeft="10dp"
                    android:textColor="#708090"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#87cefa"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/mak"
                    android:text="장소 정보"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lastpage_menu"
                    android:layout_width="match_parent"
                    android:layout_height="521dp"
                    android:padding="20dp"
                    android:paddingTop="0dp"
                    android:textSize="18sp"
                    />


            </LinearLayout>
        </LinearLayout>
        <!--이미지버튼 4개-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#87cefa"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mak"
                android:gravity="center"
                android:text="위치정보"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
               />
        </LinearLayout>


        <!--지도-->

        <RelativeLayout

            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/mapView"

            android:layout_marginBottom="10dp">

        </RelativeLayout>

        <ImageView
            android:id="@+id/lastpage_map_zoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:src="@drawable/roadfind" />

    </LinearLayout>
</ScrollView>