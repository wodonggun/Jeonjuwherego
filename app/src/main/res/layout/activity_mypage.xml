<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mypage"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:paddingTop="2dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/myapge_textView"
        android:textSize="25dp"
        android:text=""
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="#000000"

        android:layout_alignParentTop="true" />




    <TextView
        android:id="@+id/mypage_login_inform"
        android:layout_marginTop="80dp"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="로그인 정보"

        android:textColor="@color/mypage_graycolor"

        android:layout_marginLeft="20dp"

      />


    <RelativeLayout
        android:id="@+id/Relative_mypage_inform"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mypage_login_inform"
        android:layout_alignStart="@+id/mypage_login_inform">
    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="이메일 정보"
        android:id="@+id/textView3"
      />

        <TextView
            android:id="@+id/mypage_textView_email"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:textColor="@color/mypage_greencolor"
            android:text="로그인 해주세요."


            android:layout_alignParentStart="true" />

    </RelativeLayout>






    <TextView
        android:id="@+id/mypage_textView_list"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Relative_mypage_inform"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="내 여행 카트"
        android:textColor="@color/mypage_graycolor"

        android:layout_marginLeft="20dp"

        />
















    <android.support.v7.widget.RecyclerView

        android:layout_below="@+id/toolbar_mypage"
        android:id="@+id/recyclerView2"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="140dp"
        android:layout_alignParentStart="true"
       >



    </android.support.v7.widget.RecyclerView>


    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="여행카트 경로찾기"
        android:gravity="center"
        android:layout_below="@id/recyclerView2"
        android:layout_centerHorizontal="true"

       />


</RelativeLayout>